<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/ll_dialog"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:animateLayoutChanges="true"
	android:background="?android:attr/colorPrimary"
	android:baselineAligned="false"
	android:fitsSystemWindows="true"
	android:orientation="vertical">
	<CloudBanking.BaseControl.CustomRelativeLayout
		android:id="@+id/rl_head"
		android:layout_width="match_parent"
		android:layout_height="@dimen/base_header_size"
		android:background="@color/primary_gray_color">

			<CloudBanking.BaseControl.CustomImageView
				android:id="@+id/btn_menu"
			android:layout_marginLeft="@dimen/menu_layout_padding"
				android:layout_width="@dimen/icon_app_bar_width_menu"
				android:layout_height="@dimen/icon_app_bar_height_menu"
				android:scaleType="fitCenter"
			android:layout_centerVertical="true"
				android:layout_alignWithParentIfMissing="true"
				app:srcVector="@drawable/vector_menu_hambuger"/>

			<CloudBanking.BaseControl.TvLabel
				android:id="@+id/tv_title"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/base_margin_x2"
			android:layout_toEndOf="@+id/btn_menu"
			android:layout_toStartOf="@+id/view_status_circle"
			android:layout_marginRight="@dimen/base_margin_x2"
				android:layout_centerVertical="true"
				android:textColor="@color/primary_title_color"
				android:textSize="@dimen/base_text_size"
				android:gravity="center_vertical"
				android:maxLines="1"
				android:text="Start App"
				app:FontAssets="Roboto_Medium"/>
		<View
			android:id="@+id/leftMenuClickView"
			android:layout_width="@dimen/_55sdp"
			android:layout_height="match_parent"/>

		<CloudBanking.BaseControl.CustomLinearLayout
			android:id="@+id/ll_close"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_alignParentRight="true"
			android:gravity="center_vertical|right"
			android:orientation="horizontal"
			android:layout_marginRight="@dimen/menu_layout_padding"
			app:itemSpace="@dimen/header_icon_margin_right">


			<CloudBanking.BaseControl.CustomImageView
				android:id="@+id/iv_language"
				android:layout_width="@dimen/header_icon_size"
				android:layout_height="@dimen/header_icon_size"
				android:scaleType="fitCenter"
				app:srcVector="@drawable/vector_language"/>

		</CloudBanking.BaseControl.CustomLinearLayout>

		<View
			android:id="@+id/view_status_circle"
			android:layout_width="@dimen/status_circle_diameter"
			android:layout_height="@dimen/status_circle_diameter"
			android:layout_centerInParent="true"
			android:visibility="invisible"
			android:src="?android:attr/colorPrimary"/>
	</CloudBanking.BaseControl.CustomRelativeLayout>
	<RelativeLayout
		android:id="@+id/ll_dialog_content"
		android:layout_width="fill_parent"
		android:layout_height="match_parent"
		android:background="?android:attr/colorPrimary"
		android:orientation="vertical">

		<RelativeLayout
			android:layout_marginBottom="@dimen/_30sdp"
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<CloudBanking.BaseControl.CustomImageView
				android:id="@+id/iv_logo"
				android:layout_width="@dimen/main_logo_width"
				android:layout_height="@dimen/main_logo_height"
				android:layout_centerInParent="true"
				android:scaleType="centerInside"
				android:gravity="center"
				app:srcVector="@drawable/vector_logo_android"/>

			<ProgressBar
				android:id="@+id/progressbar"
				android:layout_below="@+id/iv_logo"
				android:layout_width="@dimen/splash_progress_size"
				android:layout_height="@dimen/splash_progress_size"
				android:layout_centerHorizontal="true"
				android:layout_marginTop="@dimen/menu_layout_padding"
				android:progressDrawable="@color/white_color"
				style="?android:attr/progressBarStyleLarge" />

			<CloudBanking.BaseControl.TvLabel
				android:id="@+id/tv_message"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@+id/progressbar"
				android:padding="@dimen/base_margin_scale"
				android:gravity="center_horizontal"
				android:textSize="@dimen/base_small_text_size"
				android:textColor="@color/white_color" />

			<CloudBanking.BaseControl.TvLabel
				android:id="@+id/tv_sub_message"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@+id/tv_message"
				android:paddingLeft="@dimen/base_margin_scale"
				android:paddingRight="@dimen/base_margin_scale"
				android:paddingBottom="@dimen/base_margin_scale"
				android:gravity="center"
				android:textSize="@dimen/sp_vv_tiny_text_size"
				android:textColor="@color/white_color" />

			<ListView
				android:id="@+id/logonStatusLv"
				android:layout_below="@+id/iv_logo"
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:layout_centerHorizontal="true"
				android:layout_marginTop="@dimen/menu_layout_padding"
				android:divider="@null"
				android:listSelector="@android:color/transparent"
				android:background="?android:attr/colorPrimary"
				android:dividerHeight="0dp"/>

		</RelativeLayout>

		<CloudBanking.BaseControl.BtnGradient
			android:id="@+id/btn_start"
			android:layout_marginLeft="@dimen/menu_layout_padding"
			android:layout_marginRight="@dimen/menu_layout_padding"
			android:layout_height="@dimen/primary_gradient_button_height"
			android:layout_width="match_parent"
			android:layout_above="@+id/tv_version"
			android:layout_marginBottom="@dimen/base_margin"
			app:GradientTextGravity="Center"
			app:GradientTextColor="@color/black_color"
			app:GradientType="Modern"
			app:GradientTextSize="@dimen/sp_x_normal_text_size"
			app:GradientRightIcon="@drawable/vector_swipe_right_icon"/>

		<CloudBanking.BaseControl.TvLabel
			android:id="@+id/tv_version"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:padding="@dimen/base_margin_scale"
			android:gravity="center"
			android:textSize="@dimen/sp_vv_tiny_text_size"
			android:textColor="@color/white_color"
			app:FontAssets="Roboto_Bold"/>

	</RelativeLayout>
</LinearLayout>